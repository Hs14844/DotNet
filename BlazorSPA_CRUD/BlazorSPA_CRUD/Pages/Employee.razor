@page "/Employees"
@using BlazorSPA_CRUD.Data
@inject EmployeeService employeeService

<h3>Employee</h3>

<NavLink class="nav-link" href="AddEmployee">

    <span class="oi oi-plus" aria-hidden="true">Add New</span>

</NavLink>

<h1>Employee Info</h1>
@if (Emps is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Emp Id</th>
                <th>Employee Name</th>
                <th>Gender</th>
                <th>Department</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Emps)
            {
            <tr>
                <td>@emp.EmpId</td>
                <td>@emp.EmpName</td>
                <td>@emp.Gender</td>
                <td>@emp.Department</td>
                <td>@emp.City</td>
                <td>@emp.HireDate</td>
                <td>
                    <a class="nav-link" href="EditEmployee/@emp.EmpId">
                        <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                    </a>
                    <a class="nav-link" href="Delete/@emp.EmpId">
                        <span class="oi oi-trash" aria-hidden="true">Delete</span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {

    List<BlazorSPA_CRUD.Data.Employee> Emps;
    protected override async Task OnInitializedAsync()
    {
        Emps = await Task.Run(() => employeeService.GetEmployeesAsync());
    }

}
